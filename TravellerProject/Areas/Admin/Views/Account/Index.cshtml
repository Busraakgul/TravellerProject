@model AccountViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Unit of Work Account Transactions</h2>

<form method="post" asp-area="Admin" asp-controller="Account" asp-action="Index">

    <label>Sender Account ID:</label>
    <input type="number" asp-for="SenderID" class="form-control" />
    <br />

    <label>Receiver Account ID:</label>
    <input type="number" asp-for="ReceiverID" class="form-control" />
    <br />

    <label>Amount:</label>
    <input type="number" step="0.01" asp-for="Amount" class="form-control" />
    <br />

    <button type="submit" class="btn btn-primary">Transfer</button>
    <br />
</form>

<br />

<a asp-area="Admin"
   asp-controller="TransactionLog"
   asp-action="TransactionHistory"
   asp-route-accountId="@Model.SenderID"
   class="btn btn-secondary">
    View Transaction History
</a>


@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}



