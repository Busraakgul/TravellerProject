@model EntityLayer.Concrete.Destination
@{
    ViewData["Title"] = "AddDestination";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="mb-4">New Route Page</h1>
<form method="post" novalidate>
    <div class="form-group mb-3">
        @Html.LabelFor(m => m.City, "City", new { @class = "control-label" })
        <input type="text" asp-for="City" class="form-control" placeholder="Enter a city name" required />
        @Html.ValidationMessageFor(m => m.City, "", new { @class = "text-danger" })
    </div>

    <div class="form-group mb-3">
        @Html.LabelFor(m => m.DayNight, "Reservation Date", new { @class = "control-label" })
        <input type="text" asp-for="DayNight" class="form-control" required />
        @Html.ValidationMessageFor(m => m.DayNight, "", new { @class = "text-danger" })
    </div>

    <div class="form-group mb-3">
        @Html.LabelFor(m => m.Price, "Price", new { @class = "control-label" })
        <input type="text" asp-for="Price" class="form-control" placeholder="Enter a price value" required />
        @Html.ValidationMessageFor(m => m.Price, "", new { @class = "text-danger" })
    </div>

    <div class="form-group mb-3">
        @Html.LabelFor(m => m.Image, "Main Image", new { @class = "control-label" })
        <input type="text" asp-for="Image" class="form-control" placeholder="Put an image" required />
        @Html.ValidationMessageFor(m => m.Image, "", new { @class = "text-danger" })
    </div>

    <div class="form-group mb-3">
        @Html.LabelFor(m => m.Capacity, "Capacity", new { @class = "control-label" })
        <input type="text" asp-for="Capacity" class="form-control" placeholder="Enter capacity" required />
        @Html.ValidationMessageFor(m => m.Capacity, "", new { @class = "text-danger" })
    </div>

    <div class="form-group mb-3">
        @Html.LabelFor(m => m.CoverImage, "Cover Image", new { @class = "control-label" })
        <input type="text" asp-for="CoverImage" class="form-control" placeholder="Put an image" required />
        @Html.ValidationMessageFor(m => m.CoverImage, "", new { @class = "text-danger" })
    </div>

    <div class="form-group mb-3">
        @Html.LabelFor(m => m.Image2, "Other Image", new { @class = "control-label" })
        <input type="text" asp-for="Image2" class="form-control" placeholder="Put an image" required />
        @Html.ValidationMessageFor(m => m.Image2, "", new { @class = "text-danger" })
    </div>

    <div class="form-group mb-3">
        @Html.LabelFor(m => m.Details1, "Detail1", new { @class = "control-label" })
        <textarea asp-for="Details1" class="form-control" rows="3" placeholder="Add detail" required></textarea>
        @Html.ValidationMessageFor(m => m.Details1, "", new { @class = "text-danger" })
    </div>

    <div class="form-group mb-3">
        @Html.LabelFor(m => m.Details2, "Details2", new { @class = "control-label" })
        <textarea asp-for="Details2" class="form-control" rows="3" placeholder="Add detail" required></textarea>
        @Html.ValidationMessageFor(m => m.Details2, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-outline-primary">Add</button>
</form>

