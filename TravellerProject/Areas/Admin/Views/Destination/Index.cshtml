 @using EntityLayer.Concrete
@model List<Destination>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h1 class="my-4">Tour Routes</h1>

<table class="table table-hover table-striped text-center align-middle">
    <thead>
        <tr>
            <th style="color: #FFFFFF; background-color: #343a40;">#</th>
            <th style="color: #FFFFFF; background-color: #343a40;">City</th>
            <th style="color: #FFFFFF; background-color: #343a40;">Price</th>
            <th style="color: #FFFFFF; background-color: #343a40;">Capacity</th>
            <th style="color: #FFFFFF; background-color: #343a40;">See on Website</th>
            <th style="color: #FFFFFF; background-color: #343a40;">Delete</th>
            <th style="color: #FFFFFF; background-color: #343a40;">Update</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.DestinationID</td>
                <td>@item.City</td>
                <td>@item.Price.ToString("C")</td>
                <td>@item.Capacity</td>
                <td>   
                    <a href="/Destination/DestinationDetails/@item.DestinationID" class="btn btn-outline-info btn-sm">
                        <i class="fas fa-eye"></i> See on Website
                    </a>
                </td>
                <td>
                    <a href="/Admin/Destination/DeleteDestination/@item.DestinationID" class="btn btn-outline-danger btn-sm">
                        <i class="fas fa-trash-alt"></i> Delete
                    </a>
                </td>
                <td>
                    <a href="/Admin/Destination/UpdateDestination/@item.DestinationID" class="btn btn-outline-success btn-sm">
                        <i class="fas fa-edit"></i> Update
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="/Admin/Destination/AddDestination" class="btn btn-outline-primary">New Tour Route</a>

