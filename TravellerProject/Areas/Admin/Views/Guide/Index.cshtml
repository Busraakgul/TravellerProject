@using EntityLayer.Concrete
@model List<Guide>
@{
    ViewData["Title"] = "Guide Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="container my-4">
    <h1 class="text-center mb-4">Guides Management</h1>

    <table class="table table-hover table-striped shadow-sm">
        <thead class="table-primary">
            <tr>
                <th>#</th>
                <th>Image</th>
                <th>Name - Surname</th>
                <th>Description</th>
                <th>Status</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <td>@count</td>
                    <td><img src="@item.Image" class="rounded-circle" style="width: 60px; height: 60px;" alt="Guide Image" /></td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>
                        @if (item.Status==true)
                        {
                            <a href="/Admin/Guide/ChangeToFalse/@item.GuideID" class="btn btn-sm btn-outline-warning" title="Make Inactive">Passive</a>
                        }
                        else
                        {
                            <a href="/Admin/Guide/ChangeToTrue/@item.GuideID" class="btn btn-sm btn-outline-info" title="Make Active">Active</a>
                        }
                    </td>
                    <td>
                        <a href="/Admin/Guide/EditGuide/@item.GuideID" class="btn btn-sm btn-outline-success" title="Edit Guide"><i class="fas fa-edit"></i> Edit</a>
                    </td>
                    <td>
                        <a href="/Admin/Guide/DeleteGuide/@item.GuideID" class="btn btn-sm btn-outline-danger"
                           onclick="return confirm('Are you sure you want to delete this guide?');" title="Delete Guide">
                            <i class="fas fa-trash-alt"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-center mt-4">
        <a href="/Admin/Guide/AddGuide/" class="btn btn-primary btn-lg">+ New Guide</a>
    </div>
</div>
