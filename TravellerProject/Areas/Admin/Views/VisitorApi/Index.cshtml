@model List<VisitorViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>API Visitor List</h1>
<br />
<table class="table table-bordered">
    <tr>
        <th style="color: #FFFFFF; background-color: #343a40;">#</th>
        <th style="color: #FFFFFF; background-color: #343a40;">Name</th>
        <th style="color: #FFFFFF; background-color: #343a40;">Surname</th>
        <th style="color: #FFFFFF; background-color: #343a40;">City</th>
        <th style="color: #FFFFFF; background-color: #343a40;">Country</th>
        <th style="color: #FFFFFF; background-color: #343a40;">Mail</th>
        <th style="color: #FFFFFF; background-color: #343a40;">Delete</th>
        <th style="color: #FFFFFF; background-color: #343a40;">Update</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.VisitorID</th>
            <td>@item.Name</td>
            <td>@item.Surname</td>
            <td>@item.City</td>
            <td>@item.Country</td>
            <td>@item.Mail</td>
            <td><a href="/Admin/VisitorApi/DeleteVisitor/@item.VisitorID/" class="btn btn-outline-danger">Delete</a></td>
            <td><a href="/Admin/VisitorApi/UpdateVisitor/@item.VisitorID/" class="btn btn-outline-success">Update</a></td>
        </tr>
    }
</table>
<a href="/Admin/VisitorApi/AddVisitor/" class="btn btn-outline-primary">New Visitor Registration</a>
