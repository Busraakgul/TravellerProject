@model List<Destination>
@{
    ViewData["Title"] = "Destinations";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}
<!doctype html>
<html lang="zxx">
<body>
    <section class="w3l-about-breadcrumb text-left">
        <div class="breadcrumb-bg breadcrumb-bg-about py-sm-5 py-4">
            <div class="container">
                <h2 class="title">Destinations</h2>
                <ul class="breadcrumbs-custom-path mt-2">
                    <li><a href="/Default/Index/">Home</a></li>
                    <li class="active">
                        <span class="fa fa-arrow-right mx-2" aria-hidden="true"></span> Destinations
                    </li>
                </ul>
            </div>
        </div>
    </section>
    <section class="grids-1 py-5">
        <div class="container py-lg-5 py-md-4">
            <h3 class="hny-title mb-5 text-center">Destinations</h3>
            <div class="row g-5">
                @foreach (var item in Model)
                {
                    <div class="col-md-4 col-lg-4">
                        <div class="card destination-card shadow-sm border-0 h-100">
                            <div class="image-wrapper" style="height: 400px;">
                                <a href="/Destination/DestinationDetails/@item.DestinationID">
                                    <img src="@item.Image" class="card-img-top" alt="@item.City">
                                </a>
                            </div>
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title"><a href="/Destination/DestinationDetails/@item.DestinationID">@item.City</a></h5>
                                <p class="card-text mb-2"><strong>@item.DayNight</strong></p>
                                <div class="d-flex justify-content-between align-items-center mt-auto">
                                    <span class="price text-primary">$@item.Price</span>
                                    <a href="/Destination/DestinationDetails/@item.DestinationID" class="btn btn-outline-primary btn-sm">View Details</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
    <link rel="stylesheet" href="~/Traversal-Liberty/assets/css/style-liberty.css">
    <script src="~/Traversal-Liberty/assets/js/bootstrap.min.js"></script>
</body>
</html>


<style>
    .destination-card {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        height: 100%; /* Kartların eşit yüksekliği */
        border-radius: 10px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .destination-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
        }

    .image-wrapper img {
        width: 100%; /* Genişlik tam olarak uyacak */
        height: 100%; /* Yükseklik uyacak */
        object-fit: cover; /* Görüntüyü kırpmak için */
        border-bottom: 3px solid #ddd;
    }

    .card-body {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        flex-grow: 1;
    }

    .card-title {
        font-size: 1.5rem;
        font-weight: bold;
        margin-bottom: 0.75rem;
    }

    .price {
        font-size: 1.3rem;
        font-weight: bold;
        color: #007bff;
    }

    /* Grid Aralıkları */
    .row.g-5 [class*='col'] {
        margin-bottom: 4rem; /* Kartlar arasındaki mesafe */
    }

    .card-title a:hover {
        color: #ff1654;
        text-decoration: none;
    }

</style>
