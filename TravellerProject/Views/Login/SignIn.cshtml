@using TravellerProject.Models
@model UserSignInViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Traveller's Path | Sign In</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        /* General Reset */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', sans-serif;
            min-height: 100vh;
            background: linear-gradient(rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0.3)), url('https://images.unsplash.com/photo-1469854523086-cc02fe5d8800?q=80&w=2021&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D') no-repeat center center/cover;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .container {
            background: rgba(255, 255, 255, 0.95); /* Slightly transparent white */
            border-radius: 25px;
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.2);
            padding: 50px 40px;
            max-width: 500px;
            width: 100%;
            text-align: center;
        }

        .brand {
            font-size: 2.5rem; /* Increased font size */
            font-weight: 700;
            color: #333;
            margin-bottom: 20px;
        }

        h2 {
            font-size: 1.8rem; /* Increased font size */
            font-weight: 600;
            color: #444;
            margin-bottom: 20px;
        }

        p {
            font-size: 1rem; /* Larger font size for description */
            color: #666;
            margin-bottom: 30px;
        }

        .input-group {
            position: relative;
            margin-bottom: 25px;
        }

            .input-group input {
                width: 100%;
                padding: 18px 20px; /* Increased padding for larger inputs */
                border: 1px solid #ddd;
                border-radius: 30px;
                font-size: 1rem;
                color: #333;
                outline: none;
                transition: all 0.3s ease;
            }

                .input-group input:focus {
                    border-color: #555;
                    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
                }

            .input-group .icon {
                position: absolute;
                top: 50%;
                right: 15px;
                transform: translateY(-50%);
                font-size: 1.2rem;
                color: #aaa;
            }

        button {
            width: 100%;
            padding: 15px;
            background: #333;
            border: none;
            border-radius: 30px;
            color: white;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: background 0.3s ease, transform 0.2s ease;
        }

            button:hover {
                background: #555;
                transform: translateY(-2px);
            }

        .footer {
            margin-top: 30px;
            font-size: 1rem; /* Increased font size for footer text */
            color: #666;
        }

            .footer a {
                color: #333;
                text-decoration: none;
                font-weight: 500;
            }

                .footer a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <div class="container">
        <div class="brand">Traveller's Path</div>
        <h2>Welcome Back</h2>
        <p>Sign in to continue exploring the world.</p>
        <form method="post">
            <div class="input-group">
                <input type="text" asp-for="username" placeholder="Username" required>
                <span class="icon">
                    <i class="fas fa-user"></i>
                </span>
            </div>
            <div class="input-group">
                <input type="password" asp-for="password" placeholder="Password" required>
                <span class="icon">
                    <i class="fas fa-lock"></i>
                </span>
            </div>
            <button type="submit">Sign In</button>
        </form>
        <div class="footer">
            Don't have an account? <a href="/Login/SignUp">Sign Up</a>
        </div>
    </div>
</body>
</html>
