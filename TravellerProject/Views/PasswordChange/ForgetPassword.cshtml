@model ForgetPasswordViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Password Reset</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
    <style>
        /* General Reset */
        body {
            font-family: 'Poppins', sans-serif;
            margin: 0;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: #f4f4f4; /* Subtle neutral background color */
        }

        .background {
            background: linear-gradient(to bottom right, rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0.3)), url('https://www.travelandleisure.com/thmb/6UwUc0qiA8ANOErYMuHJ1D5Dv4o=/1500x0/filters:no_upscale():max_bytes(150000):strip_icc()/ha-long-bay-vietnam-MOSTBEAUTIFUL0921-910a3a82a03f4bb59d49290fbdc2a6db.jpg') no-repeat center center;
            background-size: cover;
            border-radius: 20px; /* Optional rounded corners for a professional look */
            margin: 20px; /* Adds equal spacing around all sides */
            width: calc(100% - 40px); /* Full width minus margins (20px + 20px) */
            height: calc(100vh - 40px); /* Full height minus margins (20px + 20px) */
            padding: 50px; /* Internal spacing for content */
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2); /* Optional shadow for depth */
            display: flex;
            justify-content: center;
            align-items: center;
        }



        .container {
            background: rgba(255, 255, 255, 0.9); /* Semi-transparent white background */
            border-radius: 20px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
            padding: 80px 70px; /* Daha büyük padding */
            max-width: 700px; /* Formun genişliğini büyütün */
            width: 100%;
            text-align: center;
        }


        h2 {
            font-size: 2rem;
            font-weight: 600;
            color: #333;
            margin-bottom: 20px;
        }

        p {
            font-size: 1rem;
            color: #666;
            margin-bottom: 30px;
        }

        .illustration {
            width: 15%; /* Reduce width to 80% of the container */
            max-width: 150px; /* Maximum size for the icon */
            margin: 0 auto 20px auto; /* Center and add bottom spacing */
        }

        label {
            font-size: 1rem;
            color: #444;
            font-weight: 500;
            margin-bottom: 10px;
            display: block;
            text-align: left;
        }

        input[type="text"] {
            border-radius: 10px;
            border: 1px solid #ddd;
            padding: 16px 20px; /* Larger padding for bigger input field */
            font-size: 1rem;
            width: 100%;
            outline: none;
            transition: border 0.3s ease, box-shadow 0.3s ease;
        }

            input[type="text"]:focus {
                border-color: #007bff; /* Bootstrap blue */
                box-shadow: 0 0 8px rgba(0, 123, 255, 0.3);
            }

        .btn-primary {
            background-color: #6c757d; 
            border-color: #6c757d;
            border-radius: 8px;
            padding: 15px 20px;
            font-size: 1.1rem;
            font-weight: 600;
            transition: background-color 0.3s ease, transform 0.2s ease;
            margin-top: 15px;
            width: 100%; /* Button stretches across full form width */
            color: #fff; /* Ensure white text for readability */
        }

            .btn-primary:hover {
                background-color: #45A049; /* Darker green on hover */
                transform: translateY(-2px); /* Slight hover lift effect */
            }

        .alert {
            margin-top: 20px;
            font-size: 1rem;
        }





        .header {
            display: flex; /* Flexbox kullanımı */
            align-items: center; /* Dikeyde ortalamak için */
            justify-content: center; /* Yatayda ortalamak için (isteğe bağlı) */
            gap: 15px; /* İcon ile başlık arasına boşluk ekler */
            margin-bottom: 20px; /* Header ile aşağıdaki form arasında boşluk */
        }

        .icon {
            width: 50px; /* İconun genişliği */
            height: auto; /* Oranlı yükseklik */
        }

        .title {
            font-size: 1.8rem; /* Başlığın boyutu */
            font-weight: 600; /* Kalın font */
            color: #333; /* Başlığın rengi */
            margin: 0; /* Varsayılan marginleri sıfırla */
        }

    </style>
</head>
<body>
    <div class="background">
        <div class="container">

            <!-- Heading and Description -->
            <div class="header">
                <img src="https://cdn-icons-png.flaticon.com/512/201/201623.png" alt="Icon" class="icon">
                <h2 class="title">Traveller's Path</h2>
            </div>


            <!-- Success Message -->
            @if (ViewBag.Message != null)
            {
                <div class="alert alert-info">@ViewBag.Message</div>
            }

            <!-- Form -->
            <form method="post">
                <label for="email">Email Address</label>
                <input type="text" id="email" class="form-control" asp-for="Mail" placeholder="Enter your email" required />
                <button type="submit" class="btn btn-primary">Send Password Reset Link</button>
            </form>
        </div>
    </div>
</body>
</html>
