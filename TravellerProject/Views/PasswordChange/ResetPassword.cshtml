
 @model ResetPasswordViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Password Reset</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
    <style>
        /* General Reset */
        body {
            font-family: 'Poppins', sans-serif;
            margin: 0;
            height: 100vh;
            display: flex;
            justify-content: center; /* Yatayda ortalama */
            align-items: center; /* Dikeyde ortalama */
            background-color: #f4f4f4; /* Açık arka plan rengi */
        }

        /* Arka Plan Kutusu */

        .background {
            background: url('https://images.squarespace-cdn.com/content/v1/63ef7bd2f5198045eaae5913/1677201262094-SCJYV5NL1COE4BMXFRTC/Torres+del+Paine+National+Park') no-repeat center center;
            background-size: cover;
            border-radius: 20px;
            margin: 20px; /* Daha az kenar boşluğu */
            width: calc(100% - 20px); /* Ekran genişliğine göre dinamik genişlik */
            height: calc(100vh - 20px); /* Ekran yüksekliğine göre dinamik yükseklik */
            padding: 50px;
            position: relative;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2); /* Hafif gölge efekti */
        }


            /* Opacity Effect */
            .background::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: rgba(0, 0, 0, 0.3); /* Siyah yarı saydam katman */
                border-radius: 20px;
                z-index: 0;
            }

        /* Form Kutusu */
        .container {
            position: relative;
            z-index: 1;
            background: rgba(255, 255, 255, 0.9); /* Beyaz yarı saydam arka plan */
            border-radius: 15px;
            padding: 50px; /* Daha büyük padding */
            max-width: 600px; /* Daha geniş form */
            width: 100%; /* Formun tam genişliği */
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
            text-align: center; /* İçerik ortalama */
        }

        h2 {
            font-size: 2.5rem; /* Daha büyük başlık */
            font-weight: 600;
            color: #333;
            margin-bottom: 30px;
        }

        label {
            font-size: 1.2rem; /* Daha büyük etiket */
            color: #555;
            font-weight: 500;
            margin-bottom: 10px;
            display: block;
            text-align: left;
        }

        input[type="text"], input[type="password"] {
            border-radius: 10px;
            border: 1px solid #ddd;
            padding: 16px 20px; /* Daha büyük input alanı */
            font-size: 1.1rem; /* Daha büyük yazı boyutu */
            width: 100%;
            margin-bottom: 25px;
            transition: border-color 0.3s, box-shadow 0.3s;
        }

            input[type="text"]:focus, input[type="password"]:focus {
                border-color: #007bff; /* Bootstrap mavisi */
                box-shadow: 0 0 8px rgba(0, 123, 255, 0.3);
            }

        .btn-primary {
            background-color: #6c757d;
            border: none;
            border-radius: 10px;
            padding: 15px 30px; /* Daha büyük buton */
            font-size: 1.3rem;
            font-weight: 600;
            color: white;
            width: 100%;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                transform: translateY(-2px);
            }

        .alert {
            font-size: 1.1rem;
            margin-bottom: 20px;
        }

        .form-footer {
            margin-top: 20px;
            text-align: center;
            color: #777;
            font-size: 1rem;
        }

            .form-footer a {
                color: #007bff;
                text-decoration: none;
            }

                .form-footer a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <div class="background">
        <div class="container">
            <!-- Başlık -->
            <h2>Password Reset</h2>

            <!-- Mesaj -->
            @if (ViewBag.Message != null)
            {
                <div class="alert alert-info">@ViewBag.Message</div>
            }

            <!-- Form -->
            <form method="post">
                <label for="password">New Password</label>
                <input type="password" id="password" class="form-control" asp-for="Password" placeholder="Enter your new password" required />

                <label for="confirm-password">Confirm Password</label>
                <input type="password" id="confirm-password" class="form-control" asp-for="ConfirmPassword" placeholder="Re-enter your new password" required />

                <button type="submit" class="btn btn-primary">Update Password</button>
            </form>

            <!-- Footer -->
            <div class="form-footer">
                <p>Need help? <a href="/Contact/Index/">Contact support</a></p>
            </div>
        </div>
    </div>
</body>
</html>
